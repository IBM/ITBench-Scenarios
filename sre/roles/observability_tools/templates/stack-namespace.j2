    openshift.io/sa.scc.supplemental-groups: 65532/10000
    openshift.io/sa.scc.uid-range: 65000/10000
  labels:
    it-bench: "true"
{% endif %}
{% if observability_tools_enabled.stack.opentelemetry or observability_tools_enabled.stack.jaeger %}
