{% if observability_tools_enabled.stack.ingress %}
---
apiVersion: v1
kind: Namespace
metadata:
  name: "{{ observability_tools_helm_releases.ingress.namespace }}"
  labels:
    it-bench/monitoring: "true"
{% endif %}
{% if observability_tools_enabled.stack.clickhouse or observability_tools_enabled.stack.opentelemetry %}
---
apiVersion: v1
kind: Namespace
metadata:
  name: "{{ observability_tools_helm_releases.clickhouse_operator.namespace }}"
  labels:
    it-bench/monitoring: "true"
---
apiVersion: v1
kind: Namespace
metadata:
  name: "{{ observability_tools_helm_releases.clickhouse.namespace }}"
  annotations:
    openshift.io/sa.scc.mcs: s0:c30,c10
    openshift.io/sa.scc.uid-range: 100/100
    openshift.io/sa.scc.supplemental-groups: 101/100
  labels:
    it-bench/monitoring: "true"
{% endif %}
{% if observability_tools_enabled.stack.opensearch or observability_tools_enabled.stack.jaeger %}
---
apiVersion: v1
kind: Namespace
metadata:
