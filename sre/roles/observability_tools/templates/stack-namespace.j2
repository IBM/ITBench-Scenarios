    openshift.io/sa.scc.uid-range: 1000/1000
    openshift.io/sa.scc.supplemental-groups: 1000/1000
  labels:
    it-bench/monitoring: "true"
{% endif %}
{% if observability_tools_enabled.stack.jaeger %}
---
apiVersion: v1
